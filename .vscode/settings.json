{
  "editor.tabSize": 2,
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "workbench.sideBar.location": "right",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.tsserver.experimental.enableProjectDiagnostics": true,
  "eslint.workingDirectories": ["./apps/client", "./apps/api"],
  "cSpell.words": [
    "Consts",
    "GraphQL",
    "buildable",
    "builtins",
    "cacheable",
    "chainable",
    "codegen",
    "cssmodule",
    "dedup",
    "eqeqeq",
    "graphcache",
    "mixins",
    "nrwl",
    "openid",
    "pkce",
    "queryable",
    "reexecute",
    "rerender",
    "sonarjs",
    "unmount",
    "urql"
  ],
  "cSpell.ignorePaths": [
    "**/package-lock.json",
    "**/node_modules/**",
    "**/vscode-extension/**",
    "**/.git/objects/**",
    ".vscode",
    ".vscode-insiders",
    "package.json",
    "*.initialState.json",
    "*.testData.json",
    "**/*.d.ts",
    ".vscode-server"
  ]
}
